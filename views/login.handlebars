<h2>Login</h2>
<form action="" id="login" class="mb-3">
    <div class="row">
        <div class="col">
            <input type="text" placeholder="username" id="loginUsername" class="form-control">
        </div>
        <div class="col">
            <input type="password" placeholder="password" id="loginPassword" class="form-control">
        </div>
        <div class="col">
            <button class="btn btn-dark">Login!</button>
        </div>
    </div>
</form>
<h2>Signup</h2>
<form action="" id="signup" class="mb-3">
    <div class="row">
        <div class="col">
            <input type="text" placeholder="username" id="signupUsername" class="form-control">
        </div>
        <div class="col">
            <input type="password" placeholder="password" id="signupPassword" class="form-control">
        </div>
        <div class="col">
            <button class="btn btn-dark">Signup!</button>
        </div>
    </div>
</form>
<script src="/js/login.js"></script>